/* pages/my/my.wxss */

.my_header {
    position: relative;
    width: 100%;
    height: 250rpx;
}

.my_header .my_hd_bg {
    width: 100%;
    height: 100%;
}

.my_hd_mid {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    width: 100%;
    z-index: 1;
    padding: 0 30rpx;
    height: 100%;
}

.my_hd_img {
    width: 126rpx;
    height: 126rpx;
    border-radius: 100%;
    overflow: hidden;
}

.my_hd_img image {
    width: 100%;
    height: 100%;
}

.my_hd_mid text {
    font-size: 32rpx;
    color: #ffffff;
    display: block;
    margin-left: 30rpx;
}

.my_function {
    padding: 30rpx;
}

.my_vip_card {
    position: relative;
    width: 100%;
    height: 377rpx;
    margin-bottom: 30rpx;
}

.my_vip_card .card {
    display: block;
    width: 100%;
    height: 100%;
}

.my_card_t .car_h {
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    border-radius: 100%;
}

.my_card_t {
    position: absolute;
    top: 30rpx;
    left: 30rpx;
}

.my_card_t .car_h image {
    width: 100%;
    height: 100%;
}

.my_card_t text {
    font-size: 36rpx;
    color: #ffffff;
    font-weight: bold;
    display: block;
    margin-left: 30rpx;
}

.my_list {
    background: #ffffff;
    border-radius: 10rpx;
    box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.08);
    margin-bottom: 30rpx;
    padding: 30rpx;
}

.my_list .my_l image {
    width: 46rpx;
    height: 46rpx;
}

.my_list .my_l text {
    font-size: 28rpx;
    color: #333333;
    margin-left: 30rpx;
}

.my_list .my_r {
    width: 14rpx;
    height: 24rpx;
}

.my_bot {
    margin-top: 50rpx;
}

.my_bot text {
    font-size: 24rpx;
    color: #666666;
}

.my_bot button {
    font-size: 28rpx;
    color: #333333;
    background-color: #ededf2;
    border-radius: 10rpx;
    height: 90rpx;
    margin-top: 30rpx;
    width: 100% !important;
    font-weight: 600 !important;
}
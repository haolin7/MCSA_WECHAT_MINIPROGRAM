/* pages/xyh/xyh.wxss */

.community {
    padding: 0 30rpx 0 30rpx;
}

.tabs {
    padding-top: 120rpx;
}

.com_list {
    background: #ffffff;
    border-radius: 10rpx;
    margin-bottom: 30rpx;
    height: 130rpx;
    padding: 0 30rpx;
}

.com_l {
    width: 90%;
}

.com_left {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
}

.com_left image {
    width: 100%;
    height: 100%;
}

.com_text {
    width: calc(100% - 100rpx);
    font-size: 26rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.fx {
    width: 14rpx;
    height: 24rpx;
}

.code_t {
    padding: 30rpx;
    margin: 0 30rpx;
    background: #ffffff;
}

.code_b {
    width: 330rpx;
}

.tt_img {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 15rpx;
}

.tt_img image {
    width: 100%;
    height: 100%;
}

.code_b text {
    font-size: 24rpx;
    text-align: center;
}


/* 搜索 */

.publish {
    font-size: 26rpx;
    color: #333;
    width: 74rpx;
    position: relative;
    bottom: 17rpx;
}

.search_btn {
    font-size: 26rpx;
    color: #333;
    width: 74rpx;
}


/* 切换2 */

.tabs2 {
    background: #ffffff;
    position: relative;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.forum_box {
    margin-bottom: 120rpx;
}

.forum_list {
    padding: 30rpx 0;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.for_head_portrait {
    width: 90rpx;
    height: 90rpx;
    border-radius: 100%;
    overflow: hidden;
    margin-right: 30rpx;
}

.for_head_portrait image {
    width: 100%;
    height: 100%;
}

.for_header_Introduction {
    width: calc(100% - 120rpx);
}

.for_header_Int_top .h1 {
    font-size: 26rpx;
    color: #333333;
    font-weight: bold;
}

.for_header_Int_top .img {
    display: block;
    width: 28rpx;
    height: 28rpx;
    margin: 0 15rpx;
}

.for_header_Int_top .add {
    height: 32rpx;
    line-height: 32rpx;
    text-align: center;
    font-size: 24rpx;
    color: #666666;
    background: #f5f5f9;
}

.for_header_Int_bot {
    margin-top: 20rpx;
}

.for_header_Int_bot>view:first-child {
    margin-right: 20rpx;
}

.for_header_Int_bot>view image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
}

.for_header_Int_bot>view text {
    font-size: 24rpx;
    color: #333333;
}

.for_bot {
    padding: 20rpx 0 0 0;
}

.Publish_content {
    font-size: 26rpx;
    line-height: 36rpx;
    color: #333333;
}

.Time_reply {
    font-size: 24rpx;
    padding-top: 20rpx;
}

.Time_reply .time {
    color: #999999;
    margin-right: 10rpx;
}

.Time_reply .reply {
    color: #333333;
    margin-left: 10rpx;
}

.Other_reply {
    background: #f5f5f9;
    padding: 30rpx;
    margin-top: 30rpx;
}

.oth_rep_list {
    margin-bottom: 34rpx;
}

.oth_rep_list>view {
    margin-bottom: 10rpx;
}

.oth_rep_list>view .o_h1 {
    display: block;
    font-size: 24rpx;
    color: #333333;
    font-weight: bold;
}

.oth_rep_list>view .o_time {
    color: #999999;
    font-size: 24rpx;
    margin-left: 20rpx;
    display: block;
}

.oth_rep_list>view.te {
    font-size: 24rpx;
    color: #333333;
}

.reply_box {
    padding: 0 30rpx;
    background: #ffffff;
    position: fixed;
    height: 90rpx;
    z-index: 9;
    left: 0;
    right: 0;
    bottom: 0;
}

.editor {
    background: #f2f2f2;
    border-radius: 50rpx;
    width: 100%;
    height: 70rpx;
}

.editor .bj {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.editor .input_bj {
    width: calc(100% - 50rpx);
    line-height: 60rpx;
    font-size: 26rpx;
    padding-right: 10rpx;
}

.no_login {
    text-align: center;
    margin-top: 50%;
    font-size: 26rpx;
    color: #333;
    display: flex;
    align-items: center;
    justify-content: center;
}

.no_login navigator {
    color: #268bd2;
    text-decoration: underline;
}
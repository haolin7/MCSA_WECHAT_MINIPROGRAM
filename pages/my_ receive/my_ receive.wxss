/* pages/my_ receive/my_ receive.wxss */

.my_receive {
    padding: 0 30rpx;
    background: #ffffff;
}

.my_receive1 {
    border-bottom: 10rpx solid #f5f5f9;
    padding-bottom: 30rpx;
}

.my_receive1 .text {
    padding: 30rpx;
    display: block;
}

.my_receive .text {
    font-size: 26rpx;
    color: #333333;
}

.up_img {
    width: 240rpx;
    height: 240rpx;
    position: relative;
    border-radius: 10rpx;
    overflow: hidden;
    border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.up_img image {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
}

.phcolor {
    color: #999999;
}

.my_in_list {
    height: 90rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.13);
}

.my_in_list .text {
    font-size: 26rpx;
    color: #333333;
}

.my_in_list input {
    width: 60%;
    height: 100%;
    font-size: 26rpx;
    text-align: right;
}

.item_w {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.input_w {
    display: flex;
    justify-content: flex-end;
}

.input_w input {
    text-align: right;
}

.my_in_list .text text {
    color: #bb3439;
}

.tj_but {
    position: fixed;
    bottom: 0rpx;
    left: 0;
    right: 0;
    width: 100%;
    background: #ffffff;
}

.tj_but button {
    height: 90rpx;
    line-height: 90rpx;
    background: #bb3439;
    color: #ffffff;
    text-align: center;
    padding: 0;
    width: 100% !important;
    border-radius: 0;
}

.mas_bg1 {
    padding-bottom: 90rpx;
}
/* pages/youh/yh.wxss */

.preferential_content {
    padding: 30rpx;
}

.preferential_list {
    background: #ffffff;
    padding: 30rpx;
    box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.1);
    margin-bottom: 30rpx;
}

.preferential_list .prefer_img {
    width: 150rpx;
    height: 150rpx;
    border-radius: 20rpx;
    border: 2rpx solid #ff9595;
    overflow: hidden;
    margin-right: 30rpx;
}

.preferential_list .prefer_img image {
    width: 100%;
    height: 100%;
}

.preferential_list .prefer_right {
    width: calc(100% - 180rpx);
}

.preferential_list .prefer_right .h1 {
    font-size: 30rpx;
    font-weight: bold;
    color: #bb3439;
}

.preferential_list .prefer_right .ph_l {
    padding: 20rpx 0;
}

.preferential_list .prefer_right .ph_l image {
    width: 28rpx;
    height: 28rpx;
}

.preferential_list .prefer_right .ph_l text {
    font-size: 24rpx;
    color: #333333;
    margin-left: 20rpx;
}

.preferential_list .prefer_right .l_text {
    font-size: 24rpx;
    line-height: 34rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.search_btn {
    font-size: 26rpx;
    color: #333;
    width: 74rpx;
}

.no_login {
    text-align: center;
    margin-top: 50%;
    font-size: 26rpx;
    color: #333;
    display: flex;
    align-items: center;
    justify-content: center;
}

.no_login navigator {
    color: #268bd2;
    text-decoration: underline;
}
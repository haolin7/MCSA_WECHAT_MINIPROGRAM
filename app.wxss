/* 学联会 */

.guide_box {
    margin: 70rpx 30rpx 40rpx 30rpx;
    border-radius: 10rpx;
    overflow: hidden;
    box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.05);
}

.guide {
    display: block;
    width: 100%;
    height: 120rpx;
    position: relative;
    z-index: 1;
    border-radius: 10rpx;
    overflow: hidden;
}

.guide image {
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.guide text {
    display: block;
    color: #ffffff;
    font-size: 28rpx;
    position: absolute;
    z-index: 1;
    left: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

.general_title {
    padding: 0 30rpx;
    position: relative;
    margin: 30rpx auto;
}

.general_title .gen_ti {
    font-size: 30rpx;
    color: #333333;
    font-weight: bold;
    position: relative;
    padding-left: 20rpx;
    line-height: 26rpx;
}

.general_title .gen_ti::before {
    content: "";
    display: block;
    width: 6rpx;
    height: 26rpx;
    background: #bb3439;
    position: absolute;
    left: 0;
    border-radius: 10rpx;
}

.general_title .view_more {
    display: block;
    font-size: 24rpx;
    color: #666666;
}

.act_bg {
    background: #f5f5f9;
    padding: 30rpx;
    min-height: 100vh;
}

.mas_bg {
    background: #f5f5f9;
    min-height: 100vh;
    position: relative;
}


/* 校友会 */

.tabs_nav {
    background: #ffffff;
    height: 90rpx;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10000;
}

.tabs_nav>view {
    width: 50%;
    text-align: center;
    line-height: 90rpx;
    font-size: 26rpx;
    color: #333333;
    position: relative;
}

.tabs_nav>view.on {
    color: #bb3439;
}

.tabs_nav>view.on::after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    width: 40rpx;
    height: 6rpx;
    background: #bb3439;
    border-radius: 10rpx;
    left: 50%;
    margin-left: -20rpx;
}

.search_box {
    background: #f5f5f9;
    height: 80rpx;
    padding: 0 30rpx;
    border-radius: 10rpx;
    overflow: hidden;
    margin: 0 0 40rpx 0;
}

.search_box input {
    display: block;
    background: none;
    font-size: 24rpx;
    padding-left: 10rpx;
    line-height: 70rpx;
}

.search_img {
    width: 30rpx;
    height: 30rpx;
}


/* 优惠 */

.preferential_header {
    position: relative;
    width: 100%;
    height: 158rpx;
}

.preferential_header image.pre_img {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
}

.t_pre_card {
    position: relative;
    z-index: 1;
    width: 540rpx;
}

.clt_pre_bu {
